<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div class="form-control">
    <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <div class="form-control" rows="3">
    <%= f.text_field :content %>
    </div>
  </div>
  <div class = "btn btn-primary"> <%= f.submit %></div>

<% end %>
